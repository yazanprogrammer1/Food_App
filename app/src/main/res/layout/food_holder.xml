<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/food_background"
    android:layout_width="230dp"
    android:layout_height="300dp"
    android:layout_margin="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/bg_design_item"
    android:gravity="center"
    app:cardCornerRadius="30dp">


    <ImageView
        android:id="@+id/food_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:elevation="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/pizza_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.34" />

    <TextView
        android:id="@+id/food_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:gravity="center"
        android:text="Burger"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/food_img"
        app:layout_constraintEnd_toEndOf="@+id/food_img"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/food_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />


    <ImageButton
        android:id="@+id/btn_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/add_course_style"
        android:elevation="15dp"
        android:padding="5dp"
        android:src="@drawable/location"
        app:layout_constraintBottom_toTopOf="@+id/food_rest"
        app:layout_constraintEnd_toEndOf="@+id/food_rest"
        app:layout_constraintTop_toTopOf="@+id/txt_price" />

    <ImageButton
        android:id="@+id/food_rest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/add_course_style"
        android:elevation="15dp"
        android:padding="5dp"
        android:src="@drawable/baseline_navigate_next_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RatingBar
        android:id="@+id/rating"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="40dp"
        android:numStars="5"
        android:progressTint="@color/brown"
        android:rating="4.5"
        android:secondaryProgressTint="@color/brown"
        app:layout_constraintStart_toStartOf="@+id/txt_price"
        app:layout_constraintTop_toBottomOf="@+id/txt_price" />

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$12"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/food_img"
        app:layout_constraintTop_toBottomOf="@+id/food_img"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:text="$12"
        android:textColor="@color/brown"
        android:textSize="20dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/rating"
        app:layout_constraintStart_toStartOf="@+id/txt_price"
        app:layout_constraintTop_toBottomOf="@+id/txt_price" />


</androidx.constraintlayout.widget.ConstraintLayout>

